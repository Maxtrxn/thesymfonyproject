<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    <title>{% block title %}Add Form{% endblock %}</title>
</head>
<body>
<h1>{% block header %}Add Form{% endblock %}</h1>
{% block body %}

    <form method="post" action="shop_product_add_product">
        <label for="libelle">Libelle:</label>
        <input type="text" id="libelle" name="productName" required>

        <label for="prix">Prix:</label>
        <input type="number" id="prix" name="productPrice" step="0.01" required>

        <label for="quantity">Quantit√©:</label>
        <input type="text" id="quantity" name="productDescription" required>

        <button type="submit" >Ajouter</button>
    </form>
{% endblock %}
</body>
</html>